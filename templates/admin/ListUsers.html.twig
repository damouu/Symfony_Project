{% extends 'base.html.twig' %}

{% block title %}Peoples List{% endblock %}

{% block body %}
    <div class="">
        <h1 class="text-center mt-5">peoples Lists</h1>
        <table class="table">
            <thead>
            <th>Id</th>
            <th>Title</th>
            <th>First_name</th>
            <th>Last_name</th>
            <th>Age</th>
            <th>Email</th>
            <th>Role</th>
            </thead>
            <tbody>
            {% for people in peoples %}
                <td>{{ people.id }}</td>
                <td>{{ people.title }}</td>
                <td>{{ people.firstName }}</td>
                <td>{{ people.lastName }}</td>
                <td>{{ people.age }}</td>
                <td>{{ people.email }}</td>
                <td>
                    {% for role in people.roles %}
                        {{ role }}
                    {% endfor %}
                </td>
                <td>
                    <button type="button" class="btn-warning"
                            onclick="location.href = {{ path('admin_get_people') }}">Modify
                    </button>
                </td>
            {% else %}
                <p>there is currently no peoples registered</p>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
